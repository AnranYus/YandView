<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="20dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/item_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/picImgae"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/quick_ctrl"
                    android:weightSum="3"
                    android:background="?attr/colorBackgroundFloating"
                    android:alpha="0.85"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_twotone_arrow_downward_24"
                            android:id="@+id/quick_download"
                            android:layout_margin="15dp"
                            android:contentDescription="@string/description_download" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_twotone_share_24"
                            android:id="@+id/quick_share"
                            android:layout_margin="15dp"
                            android:contentDescription="@string/description_share" />
                </LinearLayout>

        </FrameLayout>

</com.google.android.material.card.MaterialCardView>